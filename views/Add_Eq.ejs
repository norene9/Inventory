<!DOCTYPE html>
<html lang="en">
<head>
    <%include header%>
  <title>Adding Componant</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<body>
    <div class="row">
      </div>
      <div class="row">
        <div class="col-sm"> <table class="table">
            <thead class="thead-dark">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Composant</th>
                <th scope="col">Quantite</th>
                <th scope="col">Quantite Disponible</th>
                <th scope="col">Suprrimer</th>
              </tr>
            </thead>
            <tbody>
                <% for (var i=0;i< composant.length;i++){%>
                    <% if(composant[i].name!=="") {%>
              <tr>
                <th scope="row"><%=i%></th>
                <td><%=composant[i].name%> </td>
                <td><%=composant[i].quantity%></td>
                <td><%=composant[i].quantity_dispo%></td>
                <td>
                    <form action="/Delete_comp" method="POST">
                        <input type="text" hidden value="<%=composant[i].id%>" name="compid">
                    <button type="submit"class="btn btn-danger">
                        Suprrimer</button>
                </form>
                </td>
                
              </tr>
            
              <%}%>
              <%}%> 
            </tbody>
          </table></div>
        <div class="col-sm"><section id="ajout">
            <h2>Ajouter Nouveau Materiel</h2>
            <form action="/Add_Eq" method="POST" >
              <div class="form-group">
                <label >Composant:</label>
                <input type="text" class="form-control" name="nom">
              </div>
              <div class="form-group">
                
              <button type="submit" class="btn btn-default">Submit</button>
            </form>
          </div>
          </section></div>
       
      </div>
  
   


</body>
</html>
